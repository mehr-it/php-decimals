{
  "name": "mehr-it/php-decimals",
  "type": "library",
  "description": "Easy to use arithmetic operations for decimals in PHP (using BCMath)",
  "keywords": [
    "bc math",
    "bcmath",
    "decimal"
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Christopher Mieger",
      "email": "mail@mehr-it.info"
    }
  ],
  "autoload": {
    "files": [
      "src/helper.php"
    ],
    "psr-4": {
      "MehrIt\\PhpDecimals\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MehrItPhpDecimalsTest\\": "test/"
    }
  },
  "require": {
    "php": "^7.0",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5|^7.4"
  }
}
